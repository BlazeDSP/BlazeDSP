<div class="row">
    <div class="col-lg-12">
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <span class="caption-helper uppercase">Information</span>
                    <span class="caption-subject font-blue-madison bold uppercase">
                        System
                    </span>
                </div>
            </div>
            <div class="portlet-body">

                <form class="form-horizontal" role="form">
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Frontend Version</label>
                            <div class="col-lg-9">
                                <p class="form-control-static">
                                    v{{system.build_version}}
                                </p>
                                <!--<span class="help-block">
                                    Domain of node network, eg. node.tracker.abc
                                </span>-->
                                <!-- placeholder='Domain of node network, ex. node.tracker.abc' hint='This is the domain that you use for tracking links (http://node.tracker.abc/t?__cid=3213&__fid=5432)' -->
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Frontend Build Date</label>
                            <div class="col-lg-9">
                                <p class="form-control-static">
                                    {{format-date system.build_date}}
                                </p>
                                <!--<span class="help-block">
                                    Domain of node network, eg. node.tracker.abc
                                </span>-->
                                <!-- placeholder='Domain of node network, ex. node.tracker.abc' hint='This is the domain that you use for tracking links (http://node.tracker.abc/t?__cid=3213&__fid=5432)' -->
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Global Tracking Domain</label>
                            <div class="col-lg-9">
                                <p class="form-control-static">
                                    {{system.node_tracking_domain}}
                                </p>
                                <span class="help-block">
                                    Domain of node network, eg. node.tracker.abc
                                </span>
                                <!-- placeholder='Domain of node network, ex. node.tracker.abc' hint='This is the domain that you use for tracking links (http://node.tracker.abc/t?__cid=3213&__fid=5432)' -->
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <span class="caption-helper uppercase">Information</span>
                    <span class="caption-subject font-blue-madison bold uppercase">
                        Azure
                    </span>
                </div>
            </div>
            <div class="portlet-body">

                <form class="form-horizontal" role="form">
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Service Bus Endpoint</label>
                            <div class="col-lg-9">
                                <p class="form-control-static">
                                    {{system.service_bus_connection_string}}
                                </p>
                                <span class="help-block">
                                    The end point of the service bus
                                </span>
                                <!-- placeholder='Domain of node network, ex. node.tracker.abc' hint='This is the domain that you use for tracking links (http://node.tracker.abc/t?__cid=3213&__fid=5432)' -->
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>