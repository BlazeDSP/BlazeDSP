<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Blaze Node | @(ViewBag.Title)</title>

    <link href="//fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />

    <link href="//ajax.aspnetcdn.com/ajax/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet" type="text/css" />

    <link href="~/Content/icomoon.css" rel="stylesheet" type="text/css" />

    <style type="text/css">
        html, body {
            padding: 0;
            margin: 0;

            background-color: #eff3f8;

            color: #3175af;

            font-family: Arial, Helvetica, sans-serif;
        }

        table {
            width: 100%;
            margin-bottom: 20px;
        }
        th {
            text-align: left;
            color: #5b9bd1;
        }

        .text-center {
            text-align: center;
        }
        .text-right {
            text-align: right;
        }

        .header {
            font-family: "Open Sans", sans-serif;
            font-size: 5em;
            color: #333;
        }

        .main {
            background-color: #ffffff;
            width: 450px;
            margin: 0 auto;
            margin-top: 10px;
            margin-bottom: 10px;
            padding: 20px;
            border-radius: 5px;
        }

        .title {
            font-weight: 600;
            color: #5b9bd1;
        }

        .flight-title {
            font-weight: 600;
            border-bottom: 1px dotted lightgray;
        }

        .font-red-thunderbird {
            color: #d91e18;
        }

        hr {
            border: none;
            border-bottom: 1px #dddddd dotted;
            width: 50%;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <div class="main">
        <div class="text-center header">
            @*<span class="firelogo-fire font-red-thunderbird" style="font-size: 1em;"></span>*@
            <span class="icomoon-fire font-red-thunderbird" style="font-size: 1em;"></span>
            <span style="font-weight: 500;">Blaze</span>
            <hr />
        </div>

        <p>&nbsp;</p>

        @(Html.Partial("_PartialUnloadAppDomain"))

        @RenderBody()

        @(Html.Partial("_PartialDebugInfo"))
    </div>

    <script src="//ajax.aspnetcdn.com/ajax/jQuery/jquery-2.1.3.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#unloadappdomain').on('click', function(e) {
                e.preventDefault();
                $.get('/unload')
                    .done(function() {
                        $('#unloadstatus').text('Unload Successful');
                    })
                    .fail(function() {
                        $('#unloadstatus').text('Unload Failed');
                    });
            });
        });
    </script>
</body>
</html>